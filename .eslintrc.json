{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
			"indent": "off",
      "eol-last": 0,
      "no-trailing-space": 0,
      "quotes" : ["error", "double"],
      "no-var" : ["off"],
      "semi": ["error", "always"],
      "no-throw-literal" : ["off"],
      "space-before-function-paren": ["error", "never"],
      "camelcase" : ["error", {"allow": ["\\w+_\\w+"]}]
    },
    "ignorePatterns": ["*~"]
}
